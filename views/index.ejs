<%- include('partials/head') %>

      <div class="bg-image"></div>
      
      <div class="container-xxl mt-5">

          <% for(let categories of category) { %>
          <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
              <div class="col-md-4">
                <img src="/images/<%= categories.title %>.jpg" class="img-fluid rounded-start" alt="...">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= categories.title %></h5>
                  <p class="card-text"><%= categories.description %></p>
                  <p class="card-text"><small class="text-muted"><a href="/category/<%= categories._id %>"><%= categories.title %></a></small></p>
                </div>
              </div>
            </div>
          </div>
          <% } %>

          </div>

      </div>
    
      

<%- include('partials/foot') %>